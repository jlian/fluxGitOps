apiVersion: helm.fluxcd.io/v1
kind: HelmRelease
metadata:
  name: dmqttdemo-helmrelease
  namespace: dmqttdemo
  annotations:
    fluxcd.io/automated: "true"
    filter.fluxcd.io/chart-image: glob:dev-*
spec:
  releaseName: dmqttdemo-dev
  chart:
    git: https://github.com/jollyaakash/FluxDmqtt.git
    path: charts/production
    ref: master
  values:
    broker:
      frontend:
        replicas: 1